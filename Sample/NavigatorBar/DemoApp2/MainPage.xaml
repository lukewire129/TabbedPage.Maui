<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoApp2.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrls="clr-namespace:DemoApp2.Units"
    xmlns:units="clr-namespace:LazyTabbedPage.Maui.UI.Units;assembly=LazyTabbedPage.Maui"
    x:Name="this"
    Background="#222222"
    WidthRequest="440">
    <units:BottomNavigationBar
        HeightRequest="100"
        VerticalOptions="End"
        WidthRequest="440">
        <units:BottomNavigationBar.TabsBackground>
            <Grid BackgroundColor="#fffdff" />
        </units:BottomNavigationBar.TabsBackground>
        <units:BottomNavigationBar.Items>
            <units:BottomNavigationBarItems>
                <ctrls:IconTab Text="Home" Type="Home" />
                <ctrls:IconTab Text="Shop" Type="Shop" />
                <ctrls:IconTab Text="Wishlist" Type="Wishlist" />
                <ctrls:IconTab Text="Cart" Type="Cart" />
                <ctrls:IconTab Text="Me" Type="Me" />
            </units:BottomNavigationBarItems>
        </units:BottomNavigationBar.Items>
    </units:BottomNavigationBar>
</ContentPage>
