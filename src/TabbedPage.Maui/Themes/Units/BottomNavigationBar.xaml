<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    x:Class="TabbedPage.Maui.Themes.Units.BottomNavigationBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:local="clr-namespace:TabbedPage.Maui.Themes.Units"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:units="clr-namespace:TabbedPage.Maui.UI.Units"
    mc:Ignorable="d">
    <Style TargetType="{x:Type units:BottomNavigationBar}">
        <Setter Property="ControlTemplate">
            <ControlTemplate>
                <Grid>
                    <ContentView x:Name="PART_TabsBackground" />
                    <ContentView x:Name="PART_Indicator" HorizontalOptions="Start" />
                    <Border
                        Padding="{TemplateBinding Padding}"
                        HeightRequest="{TemplateBinding HeightRequest}"
                        StrokeThickness="0"
                        WidthRequest="{TemplateBinding WidthRequest}">
                        <Grid>
                            <Grid x:Name="PART_Grd" />
                        </Grid>
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</ResourceDictionary>
